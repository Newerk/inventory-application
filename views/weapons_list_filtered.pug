extends layout 

block content 
    div(class="header-solid")
        h1 #{title} #{'('} #{subtitle} #{')'}

    if filteredWeapons.length
        ul(class="ul-container") 
            - for(var i = 0; i < filteredWeapons.length; i++) {
                if i % 2 === 0
                    li(class="content-link bg-dark") 
                        a(href=filteredWeapons[i].url) #{filteredWeapons[i].name} 
                else 
                    li(class="content-link bg-light") 
                        a(href=filteredWeapons[i].url) #{filteredWeapons[i].name}
            - }
        
