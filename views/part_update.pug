extends layout 

block content 
    h1= title

    form(method="post") 
        label(for="part_name") Part Name: 
        input#part_name(type="text", name="part_name", value=part.name) 

        label(for="part-type") Part Type: 
        select#part_type_drop(name="part-type")
            each choice in partTypeOptions 
                if choice === part.part_type
                    option(value=choice selected="selected") #{choice}
                else 
                    option(value=choice) #{choice}  

        label(for="manufacturer") Manufacturer: 
        select#manufacturers_drop(name="manufacturer")
            each choice in manufacturerOptions 
                if choice.name === part.manufacturer.name
                    option(value=choice.name selected="selected") #{choice.name}
                else 
                    option(value=choice.name) #{choice.name}  



        button(type="submit") Save Changes

    if errors
        ul
            for error in errors
                li!= error.msg
