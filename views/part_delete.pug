extends layout 

block content 
    div(class="header-solid")
        h1= part.name

    div.del-page
        p.warning Are you sure you want to delete this part?

    h2.details-h2 Details

    div.form-row  
        p.form-label Part Type 
        p.form-input #{part.part_type}

    div.form-row
        p.form-label Manufacturer
        p.form-input #{part.manufacturer.name}

    div.delete-pg-btn-wrapper
        form(method="post") 
            input(type='hidden', name='partid', value=part._id )
            button(type="submit", class="submit-btn delete-pg-btn") Yes
        form(action=part.url, method="get")
            button(type="submit", class="submit-btn delete-pg-btn") No
