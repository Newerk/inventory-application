extends layout 

block content 
    div(class="header-solid")
        h1= part.name
    h2 Details:  
    p #{part.part_type}
    p Manufacturer: #{part.manufacturer.name}

    div
        p.warning Are you sure you want to delete this part?
    form(method="post") 
        input(type='hidden', name='partid', value=part._id )
        button(type="submit", class="submit-btn") Yes
    form(action=part.url, method="get")
        button(type="submit", class="submit-btn") No
