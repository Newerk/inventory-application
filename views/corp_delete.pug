extends layout 

block content 
    div.header-solid
        h1= title
    
    div.warning
        p Are you sure you want to delete this corporation? All weapons and parts belonging to them will also be deleted.

    div.form-row.corp-data
        p.form-label Total Weapons
        p.form-input #{totalWeapons}
    
    div.form-row.corp-data
        p.form-label Total Parts
        p.form-input #{totalParts}


    div.delete-pg-btn-wrapper
        form(method="post") 
            button(type="submit", class="submit-btn delete-pg-btn") Yes

        form(action=corp.url, method="get")
            button(type="submit", class="submit-btn delete-pg-btn") No

