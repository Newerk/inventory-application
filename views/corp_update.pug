extends layout 

block content 
    h1= title

    form(method="post") 
        label(for="corp_name") Corporation Name: 
        input#corp_name(type="text", name="corp_name", value=corp.name) 
        button(type="submit") Save Changes

        form(action=corp.url, method="get")
            button(type="submit") Cancel Changes

    if errors
        ul
            for error in errors
                li!= error.msg
